<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.OptionsActivity"
        android:background="#ffffcc">

    <TextView
            android:text="How many questions can you take on? The default is 10."
            android:layout_width="238dp"
            android:textSize="45px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="46dp"
            app:layout_constraintHorizontal_bias="0.323" app:layout_constraintVertical_bias="0.172"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="number"
            android:id="@+id/amount"
            android:hint="Enter a number between 1 - 50" app:layout_constraintHorizontal_bias="0.282" app:layout_constraintVertical_bias="0.252"
            android:maxLength="2"/>
    <TextView
            android:text="What category would you like to test your brains on?"
            android:layout_width="284dp"
            android:textSize="45px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="44dp"
            app:layout_constraintHorizontal_bias="0.44" app:layout_constraintVertical_bias="0.387"/>
    <Spinner
            android:id="@+id/category"
            android:layout_width="288dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="42dp"
            app:layout_constraintHorizontal_bias="0.455" app:layout_constraintVertical_bias="0.464"/>
    <TextView
            android:text="What level of difficulty can you handle?"
            android:layout_width="284dp"
            android:textSize="45px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="44dp"
            app:layout_constraintHorizontal_bias="0.44" app:layout_constraintVertical_bias="0.622"/>
    <Spinner
            android:id="@+id/difficulty"
            android:layout_width="288dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="42dp"
            android:entries="@array/difficulty" app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintVertical_bias="0.683"/>
    <Button
            android:text="Start Quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startQuiz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.834"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@android:color/holo_green_light"
            android:clickable="true" app:srcCompat="?attr/homeAsUpIndicator"
            android:id="@+id/back" app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintVertical_bias="0.023"/>

</androidx.constraintlayout.widget.ConstraintLayout>