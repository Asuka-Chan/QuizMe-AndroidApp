<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fffccc"
        tools:context=".activity.FinishActivity">

    <TextView
            android:text=""
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="58dp"
            android:gravity="center_horizontal"
            android:textSize="60px"
            android:background="#4d004d"
            android:textColor="#ffffe2"
            android:id="@+id/message" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.041"/>
    <Button
            android:text="Try Again"
            android:layout_width="103dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="50dp"
            android:id="@+id/tryAgain" app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintVertical_bias="0.804"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/viewImage"/>
    <Button
            android:text="Go to Home"
            android:layout_width="112dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="50dp"
            android:id="@+id/home" app:layout_constraintHorizontal_bias="0.237"
            app:layout_constraintVertical_bias="0.804"/>
</androidx.constraintlayout.widget.ConstraintLayout>